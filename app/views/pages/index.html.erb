<script type="text/javascript">
  $(function(){
    $(".navbar").removeClass("navbar-devise");
    $(".navbar").addClass("navbar-default");
  });
</script>

<div class="jumbotron">
	<%= render 'partial/navbar' %>

  <div class="container">
   <div class="row">
     <div class="col-md-6 col-md-offset-3 text-center">
       <h1 class="display-3">Marinerと繋がろう</h1>
     </div>
   </div>
  </div>

  <!-- Search Form -->
  <div class="top-search-field">
    <%= form_tag search_path, method: :get do %>
      <div class="row">
        <div class="container">

          <%= hidden_field_tag :lat %>
          <%= hidden_field_tag :lng %>

          <div class="col-md-7 col-xs-10" style="padding-right: 0px">
            <%= text_field_tag :search, params[:search], placeholder: "希望の場所はどこですか？", class: "form-control",id:"top-search-form" %>
          </div>

          <div class="col-md-2 hidden-xs hidden-sm">
            <%= text_field_tag :start_date, params[:start_date], placeholder: "借りたい日", class: "form-control" %>
          </div>
          <div class="col-md-2 hidden-xs hidden-sm">
            <%= text_field_tag :end_date, params[:end_date], placeholder: "返却したい日", class: "form-control" %>
          </div>
          <div class="col-md-1 col-xs-2" style="padding-left: 0px; ">
            <%= submit_tag "検索", class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <!-- ご利用の流れ -->
  <section id="services">
    <div class="container">
      <div class="row row-space-4">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">海で遊ぶ</h2>
          <h3 class="section-subheading">MarineNaviでは海で遊びたい一般の人（借りたい人）と海沿いでの提供者であるMariner（貸してくれる人）を繋ぎます♪
            　マリンレジャーや、海をレクチャーできる遊びの達人、海沿いでの貸し出しなど、
            一般の人が「あると良いなと感じるもの」をMarinerが「提供」します。</h3>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-4">
          <%= image_tag 'icon004'%>
          <h4 class="service-heading">探す</h4>
          <p class="text-muted hidden-xs">まず、海沿いで遊べるレジャーや海沿いの貸し出しが出来るMarinerさんをこのサイトで検索しましょう。</p>
        </div>
        <div class="col-md-4">
          <%= image_tag 'images'%>
          <h4 class="service-heading">予約する</h4>
          <p class="text-muted hidden-xs">いいなと思うMarinerさんがいたら、使用したい日にちを予約しましょう。</p>
        </div>
        <div class="col-md-4">
          <%= image_tag 'icon004'%>
          <h4 class="service-heading">遊ぶ</h4>
          <p class="text-muted hidden-xs">予約した日の当日になったら、Marinerさんとやり取りをして、自分たちの時間を楽しみましょう！</p>
        </div>
      </div>
    </div>
  </section>

  <!--　おすすめのシッター -->
  <section id="portfolio" class="bg-light-gray row-space-top-4 row-space-4">
    <div class="container">
      <div class="row row-space-2">
        <div class="col-lg-12 text-center">
          <h3 class="section-heading">おすすめのMarinerさんを紹介</h3>
          <h4 class="section-subheading">MarineNavi認定のMarinerさんです</h4>
        </div>
      </div>

      <div class="row">
        <% @users.each do |user|%>
          <% if !user.listings.blank?%>
            <div class="col-md-4 col-sm-6 portfolio-item row-space-2">
              <%= link_to listing_path(user.listings[0]) do %>
                <%= image_tag user.listings[0].photos[0].image.url(:medium) %>
              <% end %>
              <div class="portfolio-caption">
                <%= image_tag user.image,class:"img-circle profile-1"%>
                <span style="font-weight: bold;"><%= user.name %>さん</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>

<%= render 'pages/footer' %>

<!-- datepickerのスクリプト -->
<script>
  $(function() {
    $("#start_date").datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        $('#end_date').datepicker("option", "minDate", selected);
        $('#end_date').attr('disabled', false);
      }
    });

    $("#end_date").datepicker({
      dateFormat: 'dd-mm-yy',
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        $('#start_date').datepicker("option", "maxDate", selected);
      }
    });
  })
</script>

<script>
function init() {

  var input = /** @type {!HTMLInputElement} */(
      document.getElementById('top-search-form'));

  var autocomplete = new google.maps.places.Autocomplete(input);

  autocomplete.addListener('place_changed', function() {

    var place = autocomplete.getPlace();
    var lat = place.geometry.location.lat();
    var lng = place.geometry.location.lng();

    document.getElementById('lat').value = lat ;
    document.getElementById('lng').value = lng ;

    if (!place.geometry) {
      window.alert("Autocomplete's returned place contains no geometry");
      return;
    }

  });
}

</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB1BoiSo2jL950_AuFzV-f9ETgKn0uQl2I&signed_in=true&libraries=places&callback=init"
    async defer></script>
